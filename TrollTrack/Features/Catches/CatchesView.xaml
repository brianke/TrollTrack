<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrollTrack.Features.Catches.CatchesView"
             xmlns:f="clr-namespace:TrollTrack.Features.Catches"
             x:DataType="f:CatchesViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">

            <Label Text="{Binding RefreshStatus}" 
                   Style="{StaticResource InfoLabel}"
                   Margin="0,0,0,5"/>

            <Border Style="{StaticResource InfoCard}">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Species: "
                           Style="{StaticResource CardTitle}"
                           VerticalOptions="Center" />
                    <Picker Title="Select"
                            ItemsSource="{Binding FishOptions}"
                            SelectedItem="{Binding SelectedFishOption, Mode=TwoWay, Converter={StaticResource EnumToStringConverter}}"
                            Style="{StaticResource CardPicker}" />
                </HorizontalStackLayout>
            </Border>   
            
            <Button Text="+"
                    Style="{StaticResource CircularButton}"
                    Command="{Binding AddNewCatchCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
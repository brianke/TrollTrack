<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrollTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrollTrack.MVVM.Views"
    Title="TrollTrack"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardView}"
            Route="Dashboard" 
            Icon="dashboard.png"/>

        <ShellContent
            Title="Catches"
            ContentTemplate="{DataTemplate local:CatchesView}"
            Route="Catches" 
            Icon="fish.png"/>

        <ShellContent
            Title="Program"
            ContentTemplate="{DataTemplate local:ProgramsView}"
            Route="Program" 
            Icon="program.png"/>

        <ShellContent
            Title="Lures"
            ContentTemplate="{DataTemplate local:LuresView}"
            Route="Lures" 
            Icon="lure.png"/>

        <ShellContent
            Title="Analytics"
            ContentTemplate="{DataTemplate local:AnalyticsView}"
            Route="Analytics"
            Icon="analytics.png" />
    </TabBar>
</Shell>